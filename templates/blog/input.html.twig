{% extends "layout.html.twig" %}

{% block content %}
    <div class="panel-body">
    	{% if id == null %}
		{{ form_start(form,
			{ 
	            method: 'post',
	            action: path('blogadd'),
	        }
		) }}
		{% else %}
		{{ form_start(form,
			{ 
	            method: 'post',
	            action: path('blogupdate', { id: id }),
	        }
		) }}
		{% endif %}
		
		{{ form_label(form.name) }} {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }} {{ form_errors(form.name) }}
		{{ form_label(form.blog_type_id) }} {{ form_widget(form.blog_type_id, {'attr': {'class': 'form-control'}}) }} {{ form_errors(form.blog_type_id) }}
		{{ form_label(form.field_id) }} {{ form_widget(form.field_id, {'attr': {'class': 'form-control'}}) }} {{ form_errors(form.field_id) }}
		{{ form_widget(form.del_flg) }}
		{{ form_widget(form.updated_by) }}
		{{ form_widget(form.created_by) }}
		<div class="clearfix" style="height:20px;"></div>
		<button class="btn btn-primary" type="submit"><i class="fa fa-plus"></i>&nbsp;Save changes</button>
		
		{{ form_end(form) }}
	</div>
{% endblock %}
