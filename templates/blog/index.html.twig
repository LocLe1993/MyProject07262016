{% extends "layout.html.twig" %}

{% block content %}
    <div class="panel-body">
	<h1>List Block</h1>
	
	<div class="row">
		<form action="{{ path('blog') }}" method="GET">
			<div class="col-xs-12">
        		<div class="col-sm-6">
        			<div class="col-xs-12">
            			<div class="col-sm-4"><label>Tên blog</label></div>
            			<div class="col-sm-8"><input type="text" name="blogname" class="form-control" /></div>
        			</div>
        			<div class="col-xs-12">
            			<div class="col-sm-4"><label>Loại lĩnh vực</label></div>
            			<div class="col-sm-8">
            				<select class="form-control" name="blogtype">
            					<option value="0">--Chọn loại blog--</option>
            					{% for item in listType %}
            						<option value="{{ item.id }}">{{ item.name }}</option>
            					{% endfor %}
            				</select>
            				<!-- <input type="text" name="field" class="form-control" /> -->
            			</div>
        			</div>
        		</div>
        		<div class="col-sm-6">
        			<div class="col-xs-12">
            			<div class="col-sm-4"><label>Loại lĩnh vực</label></div>
            			<div class="col-sm-8">
            				<select class="form-control" name="field">
            					<option value="0">--Chọn loại Lĩnh vực--</option>
            					{% for item in listField %}
            						<option value="{{ item.id }}">{{ item.name }}</option>
            					{% endfor %}
            				</select>
            			<!-- <input type="text" name="blogtype" class="form-control" /> -->
            			</div>
        			</div>	
        		</div>
    		</div>
    		<div style="clear:both"></div>
    		<div class="col-sm-12 text-center">
    			<button type="submit" class="btn btn-primary">
    				Search
    			</button>
    		</div>
		</form>
	</div>
	
	<div class="row">
		<table class="table table-responsive table-hover table-stripped">
			<tr>
    			<th>
    				Tên blog
    			</th>
    			<th>
    				Loại blog
    			</th>
    			<th>
    				Loại lĩnh vực
    			</th>
			</tr>
			{% if list %}
			{% for listItem in list %}
    			<tr>
    				<td>{{ listItem.name }}</td>
    				<td>{{ listItem.bt_name }}</td>
    				<td>{{ listItem.f_name }}</td>
    			</tr>
			{% endfor %}
			{% else %}
				<tr><td colspan="3">Không thấy giá trị</td></tr>
			{% endif %}
		</table>
	</div>
</div>
{% endblock %}
